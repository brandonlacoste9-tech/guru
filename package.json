{
  "name": "floguru",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered personal development platform with browser automation",
  "author": "FloGuru Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonlacoste9-tech/guru.git"
  },
  "workspaces": [
    "clawdbot",
    "browser-use",
    "planning-with-files",
    "antigravity-awesome-skills",
    "antigravity-manager",
    "ui-ux-pro-max",
    "copilotkit",
    "workspace-template",
    "cherry-studio",
    "animate-css",
    "cline",
    "guru-gateway",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:generate": "pnpm --filter database generate",
    "db:migrate": "pnpm --filter database migrate",
    "db:push": "pnpm --filter database push",
    "db:studio": "pnpm --filter database studio",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "cron": "^4.4.0"
  }
}
